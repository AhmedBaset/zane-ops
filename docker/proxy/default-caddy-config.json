{
  "@id": "root",
  "logging": {
    "logs": {
      "default": {
        "writer": {
          "output": "stderr"
        },
        "encoder": {
          "format": "json"
        }
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "zane": {
          "@id": "zane-server",
          "listen": [
            ":443",
            ":80"
          ],
          "routes": [
            {
              "handle": [
                {
                  "handler": "subroute",
                  "@id": "zane-url-root",
                  "routes": [
                    {
                      "@id": "zane-catchall-404",
                      "handle": [
                        {
                          "body": "This deployment cannot be found on this server.",
                          "handler": "static_response",
                          "status_code": 404
                        }
                      ]
                    }
                  ]
                }
              ],
              "terminal": true
            }
          ],
          "tls_connection_policies": [
            {}
          ],
          "logs": {}
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          {
            "issuers": [
              {
                "module": "internal"
              }
            ],
            "on_demand": true
          }
        ],
        "on_demand": {
          "permission": {
            "@id": "tls-endpoint",
            "endpoint": "http://host.docker.internal:8000/api/_proxy/check-certiticates",
            "module": "http"
          }
        }
      }
    }
  }
}
